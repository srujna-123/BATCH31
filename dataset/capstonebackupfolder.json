{
	"name": "capstonebackupfolder",
	"properties": {
		"linkedServiceName": {
			"referenceName": "LS_blob",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"name": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobStorageLocation",
				"fileName": {
					"value": "@concat(dataset().name,'_',formatDateTime(utcNow(),'yyyyMMdd'),'.csv')",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@concat('root/Capstone1/daily_backup/',dataset().name)",
					"type": "Expression"
				},
				"container": "ext-metastore"
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": []
	}
}